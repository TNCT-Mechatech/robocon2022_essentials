<launch>
  <arg name="view" default="true" />

  <!-- Dualshock 4 -->
  <node name="essentials_controller_joy" pkg="joy" type="joy_node" output="screen"/>

  <!-- Controller -->
  <node name="essentials_controller" pkg="robocon2022_essentials_controller" type="controller" output="screen"/>

  <!-- Visualizer -->
  <node name="essentials_visualizer" pkg="robocon2022_essentials_visualizer" type="controller_visualizer" output="screen"/>

  <group if="$(arg view)" >
    <!-- image view -->
    <node name="master_image_view" pkg="image_view" type="image_view" output="screen" ns="master_image_view" >
      <remap from="image" to="/essentials_visualizer/color/image/" />
      <!-- <param name="autosize" value="true"/> -->
    </node>
  </group>
</launch>